{
    "name": "splash/fos-user-bundle",
    "description": "Splash Bundle for SF Fos User",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,

    "authors": [
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Splash\\Connectors\\SymfonyUser\\":            "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
           "Splash\\Connectors\\SymfonyUser\\Tests\\":     "tests/"
        },
        "files":    [
            "vendor/splash/phpcore/inc/Splash.Inc.php"
        ]
    },

    "require": {
        "php":                                          "^8.0",
        "splash/php-bundle":                            "dev-master"
    },
    
    "require-dev": {
        "badpixxel/php-sdk":                            "~2.0",
        "splash/console":                               "dev-master",

        "symfony/http-kernel":                          "^5.4",
        "symfony/framework-bundle":                     "^5.4",
        "symfony/runtime":                              "^5.4",
        "symfony/debug-pack":                           "^1.0",
        "symfony/profiler-pack":                        "^1.0",
        "symfony/phpunit-bridge":                       "*",
        "monolog/monolog":                              "^2.0",

        "doctrine/orm":                                 "^2.5",
        "doctrine/doctrine-bundle":                     "^1.6|^2.0",

        "sonata-project/user-bundle":                   "^5.0",
        "sonata-project/doctrine-orm-admin-bundle":     "*"
    },

    "scripts": {
        "auto-scripts": [
            "php bin/console cache:clear",
            "php bin/console assets:install",
            "cd var/cache/dev && ln -sf testsKernelDevDebugContainer.xml testContainer.xml"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "config": {
        "preferred-install":                "dist",
        "allow-plugins": {
            "phpro/grumphp":        true,
            "symfony/runtime":      true
        }
    },

    "archive": {
        "exclude": ["/app", "/bin", "/docs", "/tests", "/src/Entity"]
    }

}
